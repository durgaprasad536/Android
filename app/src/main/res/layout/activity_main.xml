<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.figsinc.app.login.MainActivity">


    <TextView
        android:id="@+id/textView_Signin"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="end"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:text="SignIn"
        android:textColor="@color/cobalt"
        android:textSize="@dimen/signin"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

   <!-- <ImageView
        android:layout_width="match_parent"
        android:id="@+id/imageview_logo"
        android:background="@drawable/decline"
        android:layout_height="match_parent" />-->

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to FIGS."
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:textSize="@dimen/welcome_text_size"
        android:fontFamily="@string/font_fontFamily_bold"
         />

    <Button
        android:id="@+id/button_signupWithEmail"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/cobalt"
        android:text="Sign up with email"
        android:textColor="@color/white"
        android:textSize="@dimen/signup_email"
        android:layout_below="@+id/welcomeText"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonMoreOptions"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/lightblue"
        android:text="More Options"
        android:textColor="@color/white"
        android:layout_below="@+id/button_signupWithEmail"
        android:textSize="@dimen/signup_email"
        android:textStyle="bold"
         />

