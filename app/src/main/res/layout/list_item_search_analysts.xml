<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_viewRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_photoChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/ad_entity_photo_3"
            android:layout_height="@dimen/ad_entity_photo_3"
            android:layout_gravity="center"
            android:layout_margin="@dimen/ad_item_spacing_2"
            android:background="@drawable/male_07"
            android:contentDescription="@string/messenger_cd_profile_pic_description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/ad_item_spacing_2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/ad_item_spacing_2"

            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:singleLine="false"
                android:text="Mark Jedidiah"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/profile_item_name_textSize" />

            <TextView
                android:id="@+id/profile_Company_name"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/ad_item_spacing_2"
                android:text="Singapore, Singapore Singapore"
                android:textAlignment="viewStart"
                android:textSize="@dimen/sp_13"
                android:textStyle="italic"
                android:layout_marginTop="@dimen/ad_item_spacing_2"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

