<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/linearParent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/entities_filter_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Show Details"
            android:fontFamily="@font/regular"
            android:textColor="@color/greyBlue"
            android:textSize="@dimen/text_size_14"
            android:textStyle="normal" />

        <RadioButton
            android:id="@+id/single_list_item_check_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="false"
            android:checked="false"
            android:gravity="center_horizontal|center_vertical|right"
            android:button="@drawable/checkbox_analyze_filter"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>