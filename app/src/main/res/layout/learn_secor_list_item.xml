<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_margin"
    android:elevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_topSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:maxLines="1"
            android:paddingLeft="7dp"
            android:text="@string/title_learn_child"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/textView_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_title"
            android:fontFamily="@font/semibold"
            android:paddingLeft="7dp"
            android:text="Manufacturing"
            android:textColor="@color/blueyGreyThree"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/imageview_logo"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            android:layout_below="@+id/textView_subtitle"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:visibility="visible" />

        </RelativeLayout>

        <include layout="@layout/analyze_toolbar"></include>

    </LinearLayout>
</android.support.v7.widget.CardView>