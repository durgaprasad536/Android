<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/ad_item_spacing_8"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/ad_entity_photo_3"
        android:layout_height="@dimen/ad_entity_photo_3"
        android:layout_gravity="center"
        android:layout_margin="@dimen/ad_item_spacing_2"
        android:background="@drawable/rectangle"
        android:contentDescription="@string/messenger_cd_profile_pic_description" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/ad_item_spacing_2"
        android:layout_marginTop="@dimen/ad_item_spacing_2"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="3"
            android:text="Too good to be true: How we fell for the fake Sicilian villa and paid Â£4,000 to fraudsters"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="@dimen/profile_item_name_textSize" />

        <TextView
            android:id="@+id/profile_portfolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ad_item_spacing_4"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:text="Read More"
            android:textAlignment="viewStart"
            android:textColor="@color/greyBlue" />
    </LinearLayout>
</LinearLayout><!--
        android:background="@drawable/quick_intro_item_card_background"-->
